<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#383838"
    tools:context=".RegisterPage">

    <EditText
        android:id="@+id/retUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/chelsea_market"
        android:hint="Email/User Name"
        android:inputType="textPersonName"
        android:textColor="#FADF4F"
        android:textColorHighlight="#FADF4F"
        android:textColorHint="#FADF4F"
        android:textColorLink="#FADF4F"
        android:textCursorDrawable="@color/BLM"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/retPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/chelsea_market"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#FADF4F"
        android:textColorHighlight="#FADF4F"
        android:textColorHint="#FADF4F"
        android:textColorLink="#FADF4F"
        android:textCursorDrawable="@color/BLM"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/retUserName"
        app:layout_constraintVertical_bias="0.069" />

    <EditText
        android:id="@+id/retPassword2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/chelsea_market"
        android:hint="Re-enter Password"
        android:inputType="textPassword"
        android:textColor="#FADF4F"
        android:textColorHighlight="#FADF4F"
        android:textColorHint="#FADF4F"
        android:textColorLink="#FADF4F"
        android:textCursorDrawable="@color/BLM"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/retPassword"
        app:layout_constraintVertical_bias="0.087" />

    <Button
        android:id="@+id/rbtnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/chelsea_market"
        android:text="Create Account"
        android:textColor="#000000"
        app:backgroundTint="#FADF4F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/retPassword2"
        app:layout_constraintVertical_bias="0.158" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="273dp"
        android:layout_height="227dp"
        app:layout_constraintBottom_toTopOf="@+id/retUserName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/iibo_logo" />
</androidx.constraintlayout.widget.ConstraintLayout>